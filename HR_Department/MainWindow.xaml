<Window x:Class="HR_Department.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Label Content="Branches" HorizontalContentAlignment="Center" FontSize="22"/>
            <TextBlock Text="Name:" Margin="10, 5"/>
            <TextBox x:Name="txtBranchName" Margin="10, 0, 10, 0"/>
            <TextBlock Text="Address:" Margin="10, 5"/>
            <TextBox x:Name="txtBranchAddress" Margin="10, 0, 10, 0"/>
            <TextBlock Text="Boss:" Margin="10, 5"/>
            <TextBox x:Name="txtBranchBoss" Margin="10, 0, 10, 5"/>
            <ListBox x:Name="listBranches" Margin="5" Height="250"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
                <Button Width="70" Height="30" Content="Add"/>
                <Button Width="70" Height="30" Content="Modify"/>
                <Button Width="70" Height="30" Content="Remove"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.ColumnSpan="2">
            <Grid Height="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                    <Label Content="Department" FontSize="22" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Name:" Margin="10, 45, 0, 5"/>
                    <TextBox x:Name="txtDepartmentName" Margin="10, 0, 10, 0"/>
                    <TextBlock Text="Description:" Margin="10, 5"/>
                    <TextBox x:Name="txtDepartmentDescription" Margin="10, 0, 10, 0"/>
                    <TextBlock Text="Boss:" Margin="10, 5"/>
                    <TextBox x:Name="txtDepartmentBoss" Margin="10, 0, 10, 5"/>
                    <ListBox x:Name="listDepartments" Margin="5" Height="250"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
                        <Button Width="70" Height="30" Content="Add"/>
                        <Button Width="70" Height="30" Content="Modify"/>
                        <Button Width="70" Height="30" Content="Remove"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Name:" Margin="10, 45, 0, 5"/>
                    <TextBox x:Name="txtDepEmployeeName" Margin="10, 0, 10, 0"/>
                    <TextBlock Text="Age:" Margin="10, 5"/>
                    <TextBox x:Name="txtDepEmployeeAge" Margin="10, 0, 10, 0"/>
                    <TextBlock Text="Position:" Margin="10, 5"/>
                    <TextBox x:Name="txtDepEmployeePosition" Margin="10, 0, 10, 5"/>
                    <TextBlock Text="Works from:" Margin="10, 5"/>
                    <DatePicker x:Name="datePickDepEmployeeStart" Margin="10, 0, 10, 0"/>
                    <TextBlock Text="Birthday:" Margin="10, 5"/>
                    <DatePicker x:Name="datePickDepEmployeeBirthday" Margin="10, 0, 10, 0"/>
                    <ListBox x:Name="listDepEmployees" Margin="5" Height="150"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
                        <Button Width="70" Height="30" Content="Add"/>
                        <Button Width="70" Height="30" Content="Modify"/>
                        <Button Width="70" Height="30" Content="Remove"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Column="3">
            <Label Content="Employees" HorizontalContentAlignment="Center" FontSize="22"/>
            <TextBlock Text="Name:" Margin="10, 5, 0, 5"/>
            <TextBox x:Name="txtEmployeeName" Margin="10, 0, 10, 0"/>
            <TextBlock Text="Age:" Margin="10, 5"/>
            <TextBox x:Name="txtEmployeeAge" Margin="10, 0, 10, 0"/>
            <TextBlock Text="Position:" Margin="10, 5"/>
            <TextBox x:Name="txtEmployeePosition" Margin="10, 0, 10, 5"/>
            <TextBlock Text="Works from:" Margin="10, 5"/>
            <DatePicker x:Name="datePickEmployeeStart" Margin="10, 0, 10, 0"/>
            <TextBlock Text="Birthday:" Margin="10, 5"/>
            <DatePicker x:Name="datePickEmployeeBirthday" Margin="10, 0, 10, 0"/>
            <ListBox x:Name="listEmployees" Margin="5" Height="150"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
                <Button Width="70" Height="30" Content="Add"/>
                <Button Width="70" Height="30" Content="Modify"/>
                <Button Width="70" Height="30" Content="Remove"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

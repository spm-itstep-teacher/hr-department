<Window x:Class="HR_Department.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <Border CornerRadius="25" Width="300" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Background>
                <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 1">
                    <GradientStop Color="Cyan" Offset="0.0"/>
                    <GradientStop Color="Indigo" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="Cool text" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="White"></TextBlock>
        </Border>
    </Grid>
</Window>
